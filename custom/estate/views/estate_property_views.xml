<?xml version="1.0"?>
<odoo>
  <record id="estate_property_action" model="ir.actions.act_window">
      <field name="name">Properties</field>
      <field name="res_model">estate.property</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{'search_default_available': True}</field>
  </record>

  <record id="estate_property_view_tree" model="ir.ui.view">
    <field name="name">estate.property.tree</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <tree string="Properties tree">
        <field name="name"/>
        <field name="postcode"/>
        <field name="bedrooms"/>
        <field name="living_area"/>
        <field name="expected_price"/>
        <field name="selling_price"/>
        <field name="date_availability"/>
        <field name="property_type_id" widget="many2one" />
        <field name="salesperson_id" />
        <field name="buyer_id" />
        <field name="tag_ids" widget="many2many_tags" />
        <field name="offer_ids" />
      </tree>
    </field>
  </record>

  <record id="estate_property_view_search" model="ir.ui.view">
    <field name="name">estate.property.seach</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <search string="Properties Search">
        <field name="name"/>
        <field name="postcode"/>
        <field name="bedrooms"/>
        <field name="living_area"/>
        <field name="expected_price"/>
        <field name="selling_price"/>
        <field name="date_availability"/>
        <field name="property_type_id" widget="many2one_list"/>
        <field name="salesperson_id"/>
        <field name="buyer_id" />
        <field name="tag_ids" widget="many2many_tags" />
        <filter name="available" string="Available" domain="[('state','=','new') ]" help="Show only Available"/>
        <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
        <separator/>
        <filter string="Living Area >= 70" name="inactive" domain="[('living_area', '>=', 70)]"/>
        <group expand="1" string="Group By">
          <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
        </group>
      </search>
    </field>
  </record>

  <record id="estate_property_view_form" model="ir.ui.view">
    <field name="name">estate.property.form</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <form string="Property Form">
        <header>
          <button name="action_sold" states="new,offer_Received,offer_accepted" type="object" string="Sold" />
          <button name="action_cancel" type="object" string="Cancel" />
          <field name="state" widget="statusbar" statusbar_visible="new,offer_Received,offer_accepted,sold"/>
        </header>
        <sheet>
          <h1>
            <field name="name"/>
          </h1>
          <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
          <group>
            <group>
              <field name="property_type_id"  options='{"no_create": True}'/>
              <field name="postcode"/>
              <field name="date_availability"/>
            </group>
            <group>
              <field name="expected_price"/>
              <field name="best_price" />
              <field name="selling_price"/>
            </group>
            <notebook>
              <page string="Description">
                <group>
                  <field name="description"/>
                  <field name="bedrooms"/>
                  <field name="living_area"/>
                  <field name="facades"/>
                  <field name="garage"/>
                  <field name="garden"/>
                  <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                  <field name="total_area" />
                  <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                </group>
              </page>
              <page string = "Offer info">
                <group>
                  <field name="salesperson_id" />
                  <field name="buyer_id" />
                </group>
              </page>
              <page string="Offers">
                <group>
                  <field name="offer_ids" widget="one2many_list" />
                </group>
              </page>
            </notebook>
          </group>
        </sheet>
      </form>
    </field>
   </record>


      <record id="res_users_form_properties_extended" model="ir.ui.view">
          <field name="name">res.users.form</field>
          <field name="model">res.users</field>
          <field name="inherit_id" ref="base.view_users_form"/>
          <field name="arch" type="xml">
           <xpath expr="//page[@name='references']" position="after">
                <page string="Properties" name="properties">
                 <group>
                  <group string="Property List" name="property_list">
                     <field name="property_ids" />
                  </group>
                 </group>
                </page>
              </xpath>
          </field>
      </record>
</odoo>
