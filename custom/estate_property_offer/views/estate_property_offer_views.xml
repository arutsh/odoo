<?xml version="1.0"?>
<odoo>
  <record id="estate_property_offer_action" model="ir.actions.act_window">
      <field name="name">Property offers</field>
      <field name="res_model">estate.property.offer</field>
      <field name="view_mode">tree,form</field>
      
  </record>

  <record id="estate_property_offer_view_tree" model="ir.ui.view">
    <field name="name">estate.property.offer.tree</field>
    <field name="model">estate.property.offer</field>
    <field name="arch" type="xml">
      <tree string="Properties offer tree" editable="bottom" decoration-success="status=='accepted'" decoration-danger="status=='refused'" decoration-bf = "status=='accepted'">
        <field name="price"/>
        <field name="partner_id"/>
        <field name="property_id"/>
        <field name="validity"/>
        <field name="date_deadline"/>
        <button name="action_accept" type="object" icon="fa-check" />
        <button name="action_refuse" type="object" icon="fa-times-circle" />
        <field name="status" optional="hidden"/>
     </tree>
    </field>
  </record>

  <record id="estate_property_offer_view_form" model="ir.ui.view">
    <field name="name">estate.property.offer.form</field>
    <field name="model">estate.property.offer</field>
    <field name="arch" type="xml">
      <form string="Properties offer Form">
        <field name="price"/>
        <field name="partner_id"/>
        <field name="property_id"/>
        <field name="validity"/>
        <field name="date_deadline"/>
        <field name="status"/>
      </form>
    </field>
   </record>


</odoo>
